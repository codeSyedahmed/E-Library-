@model E_Library.ViewModels.BookFormViewModel
@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
        <div class="card">
            <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title fw-semibold mb-4">Add Book</h5>
                <a asp-action="BookList" class="btn btn-primary">
                    <i class="fas fa-list"></i> View Book List
                </a>
            </div>
            <div class="card">
                <div class="card-body">
                <form asp-action="CreateBook" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name" class="form-label">Book Name</label>
                    <input asp-for=Name type="text" class="form-control" id="name">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input asp-for=Description type="text" class="form-control" id="description">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input asp-for=ImageFile type="file" name="imageFile" class="form-control" id="image">
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select asp-for="SelectedCategoryIds" asp-items="Model.CategoryList" class="form-control" id="category">
                            <option value="">--select--</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end align-items-center gap-3 mt-3">
                        <a asp-action="CategoryList" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>

                </form>
                </div>
            </div>
            </div>
        </div>
    </div>



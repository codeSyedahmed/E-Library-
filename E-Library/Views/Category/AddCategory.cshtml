@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
        <div class="card">
            <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title fw-semibold mb-4">Add Category</h5>
                <a asp-action="CategoryList" class="btn btn-primary">
                    <i class="fas fa-list"></i> View Category List
                </a>
            </div>
                <div class="card">
                    <div class="card-body">
                    <form asp-action="AddCategory" method="post">
                        <div class="mb-3">
                            <label for="exampleInput" class="form-label">Category Name</label>
                            <input asp-for=Name type="text" class="form-control" id="exampleInput">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end align-items-center gap-3 mt-3">
                            <a asp-action="CategoryList" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



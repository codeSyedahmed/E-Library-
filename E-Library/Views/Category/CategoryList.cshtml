@model IEnumerable<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        
    }
    @if (TempData["Danger"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Danger!</strong> @TempData["Danger"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="card-title fw-semibold mb-4">Category List</h5>
                <a asp-action="AddCategory" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Category
            </a>
            </div>
            <div class="table-responsive" data-simplebar>
                <table id="categoriesTable" class="table text-nowrap align-middle table-custom mb-0">
                    <thead>
                        <tr>
                            <th scope="col" class="text-dark text-center">S.No.</th>
                            <th scope="col" class="text-dark text-center">Name</th>
                            <th scope="col" class="text-dark text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int serialNumber = 1;
                        }
                        @foreach(var item in Model)
                        {
                        <tr>
                            <td class="text-dark text-center">
                                @serialNumber
                            </td>
                            <td class="text-dark text-center">
                                @item.Name
                            </td>
                                <td class="text-dark text-center">
                                    <div class="dropdown dropstart">
                                        <a href="javascript:void(0)" class="text-muted" id="dropdownMenuButton-@item.Id"
                                           data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="ti ti-dots fs-5"></i>
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@item.Id">
                                            
                                            <li>
                                                <a class="dropdown-item d-flex align-items-center gap-3"
                                                   asp-controller="Category"
                                                   asp-action="EditCategory"
                                                   asp-route-id="@item.Id">
                                                    <i class="fs-4 ti ti-edit"></i>Edit
                                                </a>
                                            </li>

                                            <li>
                                                <a class="dropdown-item d-flex align-items-center gap-3"
                                                   asp-controller="Category"
                                                   asp-action="Details"
                                                   asp-route-id="@item.Id">
                                                    <i class="fs-4 ti ti-eye"></i>View Details
                                                </a>
                                            </li>

                                            <li>
                                                <form asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="dropdown-item d-flex align-items-center gap-3 border-0 bg-transparent w-100"
                                                            onclick="return confirm('Are you sure you want to delete this category?')">
                                                        <i class="fs-4 ti ti-trash"></i>Delete
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                           
                            </tr>
                            serialNumber++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                responsive: true,
                ordering: true,
                searching: true,
                pageLength: 10
            });
        });
    </script>
}

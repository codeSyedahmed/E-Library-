@model Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Edit Category</h5>
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditCategory" method="post">
                        <div class="mb-3">
                            <input asp-for=Id type="hidden" class="form-control" id="exampleInput">
                            <label for="exampleInput" class="form-label">Category Name</label>
                            <input asp-for=Name type="text" class="form-control" id="exampleInput">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end align-items-center gap-3 mt-3">
                            <a asp-action="CategoryList" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

